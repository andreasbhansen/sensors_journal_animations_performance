<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.native_android_animation.motel.native_android_animation.AnimationFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    android:layout_width="234dp"
                    android:layout_height="210dp" />

                <Button
                    android:id="@+id/btn_navigate_to_second_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Navigate to Second Page" />

                <Button
                    android:id="@+id/btn_play_animation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play/Stop" />
        </LinearLayout>

</FrameLayout>
